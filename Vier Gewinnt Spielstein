namespace Vier_Gewinnt
{
    public class Spielstein
    {
        private readonly SolidColorBrush _farbe;

        public SolidColorBrush Farbe
        {
            get { return _farbe; }
        }

        public Spielstein(Color farbe)
        {
            _farbe = new SolidColorBrush(farbe);
        }
    }
}
